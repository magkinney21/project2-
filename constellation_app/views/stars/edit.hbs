<h1>Edit Constellation</h1>
<div class="starindex">
<form action="/users/{{user.id}}/stars/{{star.id}}?_method=PUT" method="POST">
  <div>
    <label for="name">
      Name
    </label>
    <input type="text" name="name" value="{{this.name}}"/>
  </div>
  <div>
    <label for="description">
      Description
    </label>
    <input type="text" name="name" value="{{this.description}}"/>
  </div>
  <div>
    <label for="best_viewed">
      Best Viewed
    </label>
    <input type="text" name="name" value="{{this.best_viewed}}"/>
  </div>
<div>
    <label for="img">
      Image
    </label>
    <input type="text" name="name" value="{{this.img}}"/>
  </div>
  <div>
    <input type="submit" value="Edit/Update Constellation"/>
  </div>
<!--     <form method="post" action="/star?_method=DELETE"> -->
  </form>
</form>
</div>
