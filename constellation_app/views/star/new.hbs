<h1>Edit Constellation</h1>
<form action="/users/{{user.id}}/star/{{star.id}}?_method=PUT" method="POST">
  <div>
    <label for="description">
      Description
    </label>
    <input type="text" name="name" value="{{star.name}}"/>
  </div>
  <div>
    <label for="name">
      name
    </label>
    <span>YES<input type="radio" name="in_progress" value="true" checked /></span>
    <span>NO<input type="radio" name="in_progress" value="false"/></span>
  </div>
  <div>
    <input type="submit" value="Update Constellation"/>
  </div>
</form>
